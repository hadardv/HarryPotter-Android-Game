<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/background">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry VS. Voldemort"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:layout_marginBottom="32dp"
        />

    <Button
        android:id="@+id/menu_BTN_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_TXT_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Records" />
<!--Sensor Mode-->
    <Button
        android:id="@+id/menu_BTN_sensorMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_BTN_records"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Sensors Mode" />
    <!--Arrow Mode-->
    <Button
        android:id="@+id/menu_BTN_arrowMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_BTN_sensorMode"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Arrow Mode"
        />

<!--    Speed Options  -->
    <Button
        android:id="@+id/menu_BTN_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slow"
        android:layout_below="@id/menu_BTN_arrowMode"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/menu_BTN_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast"
        android:layout_below="@id/menu_BTN_arrowMode"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp"
        android:visibility="gone"/>




</RelativeLayout>