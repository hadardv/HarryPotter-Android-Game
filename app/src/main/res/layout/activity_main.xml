<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="8"
        android:columnCount="3"
        android:useDefaultMargins="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="150dp"
        android:alignmentMode="alignMargins">
    </GridLayout>



    <ImageView
        android:id="@+id/main_IMG_heart1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/heart"
        />

    <ImageView
        android:id="@+id/main_IMG_heart2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/main_IMG_heart1"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/heart"
        />

    <ImageView
        android:id="@+id/main_IMG_heart3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/main_IMG_heart2"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/heart"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_BTN_leftArrow"
        android:layout_width="166dp"
        android:layout_height="144dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/arrow_left_svgrepo_com" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_BTN_rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/arrow_right_svgrepo_com" />


</RelativeLayout>